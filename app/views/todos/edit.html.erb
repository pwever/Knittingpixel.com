<h1>Editing todo</h1>

<% form_for(@todo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </p>
  <p>
    <%= f.label :context_id %><br />
    <%= f.collection_select(:context_id, Context.all, :id, :label, {:include_blank => "-none-"}) %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @todo %> |
<%= link_to 'Back', todos_path %>
