<h1>Editing stock</h1>

<% form_for(@stock) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :symbol %><br />
    <%= f.text_field :symbol %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :shares %><br />
    <%= f.text_field :shares %>
  </p>
  <p>
    <%= f.label :buy_date %><br />
    <%= f.date_select :buy_date %>
  </p>
  <p>
    <%= f.label :buy_price %><br />
    <%= f.text_field :buy_price %>
  </p>
  <p>
    <%= f.label :sold %><br />
    <%= f.check_box :sold %>
  </p>
  <p>
    <%= f.label :sell_date %><br />
    <%= f.date_select :sell_date %>
  </p>
  <p>
    <%= f.label :sell_price %><br />
    <%= f.text_field :sell_price %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Destroy', @stock, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', stocks_path %>
