<h1>New stock</h1>

<% form_for(@stock) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :symbol %><br />
    <%= f.text_field :symbol %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :shares %><br />
    <%= f.text_field :shares %>
  </p>
  <p>
    <%= f.label :buy_date %><br />
    <%= f.date_select :buy_date %>
  </p>
  <p>
    <%= f.label :buy_price %><br />
    <%= f.text_field :buy_price %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', stocks_path %>
